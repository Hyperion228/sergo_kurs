<Window x:Class="sergo_kurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sergo_kurs"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid Background="#5F7080">
        <StackPanel Margin="132,189,132,-189">
            <TextBlock Text="Марка автомобиля:" />
            <ComboBox x:Name="BrandComboBox"/>
            <Button Click="Button_Click_1" Height="33" Width="69">Выбрать</Button>

            <TextBlock Text="Модель автомобиля:" />
            <ComboBox x:Name="ModelComboBox"/>
            <Button Width="74" Height="31" Click="Button_Click_2">Выбрать</Button>

            <TextBlock Text="Запчасть:" />
            <ComboBox x:Name="PartsComboBox"/>
            <Button Width="116" Height="58" Content="Рассчитать" Margin="0,20,0,0" Click="Button_Click"/>
            <TextBlock Text="Итог:" Height="22" Width="337" />
            <TextBox x:Name="textbox" Height="21" Width="340"></TextBox>
        </StackPanel>
    </Grid>
</Window>
